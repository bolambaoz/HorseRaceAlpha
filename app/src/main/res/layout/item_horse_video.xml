<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/channel_root_layout">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:layout_margin="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="@color/black">

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="8dp"
                    >
                    <ImageView
                        android:id="@+id/item_horse_image"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/horse_one" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linear_left"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/image_card"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/image_card"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:id="@+id/item_horse_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/linear_left"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="2dp"
                        android:text="UK how"
                        android:textColor="@color/text_horse_item"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_flag_24"
                            android:layout_marginHorizontal="2dp"
                            />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/ic_baseline_circle_24"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/watch_live_now"
                            android:textColor="@color/text_horse_item"
                            android:textSize="10sp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/banner_horse_rec"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>